project
    : requirements 
        # hacks to allow building with <warnings>all with MSVC and boost
        <toolset>msvc:<cxxflags>/wd4267 # warning: conversion from 'size_t' to 'int' 
                                        # (boost/serialization/collections_save_imp.hpp)
        <toolset>msvc,<link>shared:<define>PWIZ_DYN_LINK
;


lib pwiz_data_misc 
    :   # sources
        FrequencyData.cpp
        PeakData.cpp
        MinimumPepXML.cpp
    :   # requirements
        <library>../../utility/misc//pwiz_utility_misc
        <library>../../utility/minimxml//pwiz_utility_minimxml
        <library>/ext/boost//serialization
    :   # default-build
    :   # usage-requirements
        <library>../../utility/misc//pwiz_utility_misc
        <library>../../utility/minimxml//pwiz_utility_minimxml
        <library>/ext/boost//serialization
    ;

unit-test-if-exists CalibrationParametersTest : CalibrationParametersTest.cpp ; 
unit-test-if-exists FrequencyDataTest : FrequencyDataTest.cpp FrequencyDataTestData.cpp pwiz_data_misc /ext/boost//filesystem ;
unit-test-if-exists PeakDataTest : PeakDataTest.cpp pwiz_data_misc /ext/boost//filesystem ;
unit-test-if-exists SampleDatumTest : SampleDatumTest.cpp ;
unit-test-if-exists MinimumPepXMLTest : MinimumPepXMLTest.cpp pwiz_data_misc ;
